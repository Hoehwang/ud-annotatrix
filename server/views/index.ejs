<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">

<head>
	<meta http-equiv="content-type" content="text/html; charset=utf-8" />
  <title>UD Annotatrix</title>
	<link rel="stylesheet" type="text/css" href="css/bootstrap.min.css" />
	<link rel="stylesheet" type="text/css" href="css/font-awesome.min.css" />
	<link rel="stylesheet" type="text/css" href="css/style.css" />
</head>

<body>
  <div id="welcome-content">

		<h1 id="welcome-banner">Welcome to UD Annotatrix</h1>

		<form method="post" enctype="multipart/form-data" action="./upload">
      <input type="file" name="corpus" />
      <input type="submit" value="Upload to server" />
		</form>

		<div id="links">
			<strong>Links:</strong>
			<a id="to_annotatrix" href="./annotatrix">
				Online annotator
			</a>
			<a id="to_help" href="./help">
				Help
			</a>
		</div>

		<div id="treebanks">
			<span>
				Available treebanks:
			</span>
			<ul>
				<% if (error) { %>

				<% } else { %>
					<% treebanks.forEach(treebank => { %>
						<li id="<%= treebank.url %>">
							<a href="<%= `${base}/annotatrix?treebank_id=${treebank.url}` %>">
								<span class="treebank-info treebank-id">
									<%= treebank.url.split('-')[0] %>
								</span>
								<span class="treebank-info treebank-modified">
									<%= treebank.modified %>
								</span>
							</a>
						</li>
					<% });  %>
				<% } %>
			</ul>
		</div>

	</div>
</body>
</html>
